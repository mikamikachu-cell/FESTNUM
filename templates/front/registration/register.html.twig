{# templates/front/registration/register.html.twig #}
{% trans_default_domain 'security' %}
{% extends 'front/layout.html.twig' %}

{% block title %}Créer un compte{% endblock %}

{% block content %}
<section class="pt-4 pb-4">
    <div class="container">
        <div class="col-lg-6 mx-auto">
            <div class="card mt-4 mb-4">
                <div class="card-body">
                    {{ form_start(form) }}
                    <!-- Les paramètres du formulaire sont définie dans App/Form/Front/RegistrationFormType.php -->
                    <h1 class="h3 mb-3 font-weight-normal">Créer un compte</h1>
                    {{ form_label(form.email, null, { 'label_attr': {'class': 'form-label'} }) }}
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                    {{ form_errors(form.email) }}

                    {{ form_row(form.firstname, {'label_attr': {'class': 'form-label'},
                                                 'attr': {'class': 'form-control'} }) }}
                    {{ form_row(form.lastname, {'label_attr': {'class': 'form-label'},
                                            'attr': {'class': 'form-control'} }) }}
                    {{ form_row(form.plainPassword) }}
                    {{ form_row(form.agreeTerms, {'label_attr': {'class': 'form-check-label'},
                                                  'attr': {'class': 'form-check-input m-1'} }) }}
                    <div class="form-group text-center">
                        <button class="btn btn-primary btn-block" type="submit">Créer</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}