{% extends 'front/layout.html.twig' %}

{% block title %}{% endblock %}

{% block content %}
    {% if app.user %}
    <div class="container">
        <div class="card w-75">
            <div class="card-body">
              <h1 class="card-title text-center">Mon profil</h1>
              <p class="card-text"> Vous êtes connecté en tant que {{app.user.firstname}} {{app.user.lastname}}.</p>
              <p class="card-text"> Votre email : {{app.user.email}}</p>
              <p class="card-text"> Dernière connexion : {{app.user.lastLoginAt|date("d/m/Y") }}</p>
              <p class="card-text"> Profil crée : {{app.user.createdAt|date("d/m/Y")}}</p>
              <a href="{{ path('app_reset_password', { 'id': app.user.id }) }}" class="btn btn-primary">Modifier mon mot de passe</a>
            </div>
          </div>
    </div>
   
    
    {% else %}
    <a href="{{ path('app_login') }}">Connectez-vous</a> ou <a href="{{ path('front_register') }}">Créez un compte</a>
    {% endif %}
{% endblock %}