{# templates/front/registration/register.html.twig #}
{% trans_default_domain 'security' %}
{% extends 'front/layout.html.twig' %}

{% block title %}Soumettre un projet{% endblock %}

{% block content %}
<section class="pt-4 pb-4">
    <div class="container">
        <div class="col-lg-6 mx-auto">
            <div class="card mt-4 mb-4 position-relative">
                {% if app.user %}
                    {# Si l'utilisateur est connecté #}
                    <h1 class="text-center">Soumettez votre film</h1>
                    {% if app.user.videoTitle %}
                        {# Si l'utilisateur a déjà soumis un projet #}
                        <div class="card text-dark bg-warning mb-3 m-auto" style="max-width: 18rem;">
                            <div class="card-header fw-bold">Un seul projet par session</div>
                            <div class="card-body">
                              <p class="card-text"><i class="fas fa-exclamation-circle text-danger"></i> Vous avez déjà soumis un film.<p>
                              <p class="card-text">Pour en proposer un nouveau, <a href="{{ path('delete_project', {id: app.user.id}) }}">supprimez le projet précédent</a></p>
                            </div>
                          </div>
                    {% else %}
                        {# Si l'utilisateur n'a pas encore soumis de projet #}
                        <div class="card-body">
                            {{ form_start(form) }}
                            {# note : Les paramètres du formulaire sont définie dans App/Form/Front/UploadVideoFormType.php #}
                            {{ form_label(form.video_title, null, { 'label_attr': {'class': 'form-label'} }) }}
                            {{ form_widget(form.video_title, { 'attr': {'class': 'form-control mb-3'} }) }}
                            {{ form_label(form.video_description, null, { 'label_attr': {'class': 'form-label'} }) }}
                            {{ form_widget(form.video_description, { 'attr': {'class': 'form-control mb-3'} }) }}
                            {{ form_label(form.video_file, null, { 'label_attr': {'class': 'form-label'} }) }}
                            {{ form_widget(form.video_file, { 'attr': {'class': 'form-control mb-3'} }) }}     
                            {# <input type="file" accept="video/mp4"> #}
                            <div class="form-group text-center">
                                <button class="btn btn-primary btn-block" type="submit">
                                Envoyer
                                </button>
                            </div>
                            {{ form_end(form) }}
                        </div>
                    {% endif %}
                {% else %}
                {# Si l'utilisateur n'est pas connecté #}

                        <h1 class="text-center">Soumettez votre film</h1>
                        <p class="text-center">
                            <a href="{{ path('app_login') }}">Connectez-vous</a> ou <a href="{{ path('front_register') }}">créez un compte</a> pour participer
                        </p>

                {% endif %}
            </div>
        </div>
    </div>
</section>
{% endblock %}