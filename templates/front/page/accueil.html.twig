{% extends 'front/layout.html.twig' %}

{% block title %}Festnum{% endblock %}

{% block content %}

<div class="row d-block d-md-none">
    <video class="col-12 px-0" src="{{ asset('ressources/banniere_cigogne.mp4') }}" autoplay muted loop></video>
</div>

